#:kivy 1.10.0


ScreenManagement: 
    Screen:
        name: "start_screen"
        BoxLayout:
            id: test2
            orientation: 'vertical'

            Button: 
                on_release: 
                    app.root.current = "reward_button_screen"
                    rew_butt.init()
                text: "Startup Reward System!"
                font_size: 50
            
            Button: 
                on_release: 
                    app.root.current = "sound_button_screen"
                    sound_butt.init()
                text: "Sounds Only!"
                font_size: 50

    Screen: 
        name: "reward_button_screen"
        Rew_Buttons:
            id: rew_butt

        BoxLayout:
            id: test2
            orientation: 'vertical'

            Button:
                text: 'BIG reward -- 0.5 sec'
                font_size: 50
                on_release: rew_butt.big_reward()
                size_hint: (1., 1)
                background_color: (.8, 0.1, 0.1, 1.0)
                
            BoxLayout:
                id: test2
                orientation: 'horizontal'
                size_hint: (1., .5)

                Button:
                    text: 'SMALL reward -- 0.1 sec'
                    font_size: 30
                    on_release: rew_butt.small_reward()
                    background_color: (.1, 0.8, 0.1, 1.0)


                Button:
                    text: 'Exit Reward System'
                    font_size: 30
                    on_release: rew_butt.close()
                    size_hint: (.5, 1.)
                    background_color: (.1, 0.1, 0.8, 1.0)

            BoxLayout:
                id: test3
                orientation: 'horizontal'
                size_hint: (1., .35)

                BoxLayout 
                    id: top
                    orientation: 'vertical'

                    Label:
                        text: 'Big Reward Cnt:'
                        font_size: 30

                    Label:
                        text: str(rew_butt.big_reward_cnt)
                        font_size: 30

                BoxLayout:
                    id: test3
                    orientation: 'vertical'

                    Label:
                        text: 'Small Reward Cnt:'
                        font_size: 30

                    Label:
                        text: str(rew_butt.small_reward_cnt)
                        font_size: 30

    Screen: 
        name: "sound_button_screen"
        Sound_Buttons:
            id: sound_butt

        BoxLayout:
            id: test2
            orientation: 'vertical'

            Button:
                text: 'BIG reward -- 0.5 sec'
                font_size: 50
                on_release: sound_butt.big_reward()
                background_color: (.8, 0.1, 0.1, 1.0)
                size_hint: (1., 1)

            BoxLayout:
                id: test3
                orientation: 'horizontal'
                size_hint: (1., .5)

                Button:
                    text: 'SMALL reward -- 0.1 sec'
                    font_size: 30
                    on_release: sound_butt.small_reward()
                    background_color: (.1, 0.8, 0.1, 1.0)

                Button:
                    text: 'Exit Sounds'
                    font_size: 30
                    on_release: sound_butt.close()
                    background_color: (.1, 0.1, 0.8, 1.0)
                    size_hint: (.5, 1.)
            
            BoxLayout:
                id: test3
                orientation: 'horizontal'
                size_hint: (1., .35)


                BoxLayout 
                    id: top
                    orientation: 'vertical'

                    Label:
                        text: 'Big Reward Cnt:'
                        font_size: 30

                    Label:
                        text: str(sound_butt.big_reward_cnt)
                        font_size: 30

                BoxLayout:
                    id: test3
                    orientation: 'vertical'

                    Label:
                        text: 'Small Reward Cnt:'
                        font_size: 30

                    Label:
                        text: str(sound_butt.small_reward_cnt)
                        font_size: 30