<COGame>:
    exit_target1: target_e1
    exit_target2: target_e2
    indicator_targ: indicator

    Target:
        id: indicator

    Target:
        id: target_e1

    Target:
        id: target_e2

    Label:
        color: .5,.5,.5,1
        font_size: 50
        center_x: root.width * 6/8
        top: root.top - 70
        text: str(root.trial_counter)



<Target>:
    canvas:
        Color:
            rgba:self.color
        Ellipse: 
            pos:self.pos
            size:self.size