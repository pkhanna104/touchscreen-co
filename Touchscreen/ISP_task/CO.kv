                    text: 'Start'
                    color: .25, .25, .25, 1
                    background_color: (.2, .2, .2, 1.0)

                    on_release:
                        root.current = 'game_screen'
                        game.init(*splash.args)
                        Clock.schedule_interval(game.update, 1.0 / 60.0)
                
                Label:
